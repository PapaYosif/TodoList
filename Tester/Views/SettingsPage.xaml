<?xml version="1.0" encoding="utf-8" ?>
<mct:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
	         xmlns:mct="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
			 xmlns:viewmodel="clr-namespace:Tester.ViewModel"
			 x:DataType="viewmodel:MainViewModel"
             x:Class="Tester.Views.SettingsPage">
	<VerticalStackLayout>
		<Entry BackgroundColor="Black" Placeholder="User" Text="{Binding Name}"></Entry>
		<Entry BackgroundColor="Black" Placeholder="Server IP" Text="{Binding ServerIP}"></Entry>
		<Entry BackgroundColor="Black" Placeholder="DB Name" Text="{Binding DbName}"></Entry>
		<Entry BackgroundColor="Black" Placeholder="DB username" Text="{Binding DbUser}"></Entry>
		<Entry BackgroundColor="Black" Placeholder="DB password" Text="{Binding DbPassword}"></Entry>
		<Label BackgroundColor="Red" TextColor="White" FontSize="Large" Text="{Binding Error}"></Label>

		<Button Command="{Binding saveSettingsCommand}" Text="Save Settings"></Button>
	</VerticalStackLayout>
</mct:Popup>